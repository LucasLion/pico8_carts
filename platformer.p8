function _init()
	p={x=20,y=20,}
end

function _update()
	if (btn(⬅️)) p.x-=1
	if (btn(➡️)) p.x+=1
	gravity=1
	if (btn(🅾️)) gravity-=4
	p.y+=gravity
end

function _draw()
	cls()
	map()
	spr(1,p.x,p.y)
end
